<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>
<h3><%= @user.name.capitalize %>'s Events Created</h3>
<% @events_made_by_current_user.each do  |e| %>
<ul>
<li><%= e.title%></li>
</ul>
<% end %>

<h3><%= @user.name.capitalize %>'s Upcoming Events</h3>
<% @upcoming_events.each do  |e| %>
<ul>
<li><%= e.title%></li>
</ul>
<% end %>

<h3><%= @user.name.capitalize %>'s Pasts Events</h3>
<% @prev_events.each do  |e| %>
<ul>
<li><%= e.title%></li>
</ul>
<% end %>

<% if current_user && current_user.name ==  @user.name %>
<%= link_to 'Edit', edit_user_path(@user) %> |
<% end %>
<%= link_to 'Back', users_path %>
